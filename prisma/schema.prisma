// Saham
model Shares {
  id       String @id @default(uuid())
  category String @unique // eg. Public  or Private(PT Sinar Solusindo Sejahtera)
  value    String // 1445000000 (contoh)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id             String   @id @default(uuid())
  title_id       String?
  title_en       String?
  description_id String?
  description_en String?
  file_url       String? // ini nantinya berupa pdf/word/excel
  publish_at     DateTime
  is_publish     Boolean  @default(true)

  reportCategory   ReportCategory @relation(fields: [reportCategoryId], references: [id], onDelete: Cascade)
  reportCategoryId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReportCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  reports     Report[]
}

model Metadata {
  id             String  @id @default(uuid())
  destination    String  @unique
  title_id       String?
  title_en       String?
  description_id String?
  description_en String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
