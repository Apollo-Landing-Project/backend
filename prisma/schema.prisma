generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  password      String
  name          String?
  role          Role    @default(SUPER_ADMIN)
  profile_image String  @default("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbm6QhXf5jqRZcX6R-lNF9sgaYnR0jtHKh0A&s")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  GUEST
}

model HomePage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  // hero section
  hero_bg String[]

  // about us section
  about_us_years_exp Int?
  about_us_products  Int?
  about_us_countries Int?
  about_us_brands    Int?

  // contact section
  contact_email    String[]
  contact_phone    String[]
  contact_link_map String?
  contact_address  String?

  // relations (1–1)
  homePageId HomePageId?
  homePageEn HomePageEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageId {
  id String @id @default(uuid())

  // hero section
  hero_title String?
  hero_desc  String?

  // about us section
  about_us_title String?
  about_us_desc  String?

  // services section
  services_title String?
  services_desc  String?

  // news section
  news_title String?
  news_desc  String?

  // partners section
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageEn {
  id String @id @default(uuid())

  // hero section
  hero_title String?
  hero_desc  String?

  // about us section
  about_us_title String?
  about_us_desc  String?

  // services section
  services_title String?
  services_desc  String?

  // news section
  news_title String?
  news_desc  String?

  // partners section
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUsPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  // Global Images (Shared)
  hero_bg              String?
  vision_image_parent  String?
  vision_image_child   String?
  mission_image_parent String?
  mission_image_child  String?
  history_image_parent String?
  history_image_child  String?

  // Relations
  aboutUsPageId AboutUsPageId?
  aboutUsPageEn AboutUsPageEn?

  governances       Governance[]
  companyStructures CompanyStructure[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model AboutUsPageId {
  id String @id @default(uuid())

  hero_title String?
  hero_desc  String?

  vision_title String?
  vision_desc  String?
  vision_quote String?
  vision_list  String[]

  mission_title String?
  mission_desc  String?
  mission_quote String?
  mission_list  String[]

  history_title String?
  history_desc  String?

  company_structure_title String?
  company_structure_desc  String?

  boc_title String?
  boc_desc  String?
  bod_title String?
  bod_desc  String?

  aboutUsPage   AboutUsPage @relation(fields: [aboutUsPageId], references: [id], onDelete: Cascade)
  aboutUsPageId String      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUsPageEn {
  id String @id @default(uuid())

  hero_title String?
  hero_desc  String?

  vision_title String?
  vision_desc  String?
  vision_quote String?
  vision_list  String[]

  mission_title String?
  mission_desc  String?
  mission_quote String?
  mission_list  String[]

  history_title String?
  history_desc  String?

  company_structure_title String?
  company_structure_desc  String?

  boc_title String?
  boc_desc  String?
  bod_title String?
  bod_desc  String?

  aboutUsPage   AboutUsPage @relation(fields: [aboutUsPageId], references: [id], onDelete: Cascade)
  aboutUsPageId String      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Position {
  BOD
  BOC
}

model Governance {
  id            String   @id @default(uuid())
  name          String
  position      Position
  position_desc String
  photo_image   String? // URL

  aboutUsPage   AboutUsPage? @relation(fields: [aboutUsPageId], references: [id])
  aboutUsPageId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyStructure {
  id         String  @id @default(uuid())
  name       String
  icon_image String? // URL

  aboutUsPage   AboutUsPage? @relation(fields: [aboutUsPageId], references: [id])
  aboutUsPageId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  hero_bg String?

  newsPageEn NewsPageEn?
  newsPageId NewsPageId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageEn {
  id         String  @id @default(uuid())
  // hero section
  hero_title String?
  hero_desc  String?
  // news section
  news_title String?
  news_desc  String?
  // csr section
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageId {
  id         String  @id @default(uuid())
  // hero section
  hero_title String?
  hero_desc  String?
  // news section
  news_title String?
  news_desc  String?
  // csr section
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServicePage {
  id       String  @id @default(uuid())
  hero_bg  String?
  isActive Boolean @default(false)

  servicePageEn ServicePageEn?
  servicePageId ServicePageId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServicePageId {
  id String @id @default(uuid())

  // Hero Section
  hero_title String?
  hero_desc  String?

  // Titles for Sections
  used_car_gallery_title String?
  used_car_gallery_desc  String?

  servicePage   ServicePage @relation(fields: [servicePageId], references: [id], onDelete: Cascade)
  servicePageId String      @unique
}

model ServicePageEn {
  id String @id @default(uuid())

  // Hero Section
  hero_title String?
  hero_desc  String?

  // Titles for Sections
  used_car_gallery_title String?
  used_car_gallery_desc  String?

  servicePage   ServicePage @relation(fields: [servicePageId], references: [id], onDelete: Cascade)
  servicePageId String      @unique
}

model Service {
  id       String  @id @default(uuid())
  bg_image String? // Global Image

  isActive Boolean @default(true)
  order    Int     @default(0)

  // Relations (One to One)
  serviceEn ServiceEn?
  serviceId ServiceId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServiceId {
  id       String   @id @default(uuid())
  title    String?
  desc     String?
  location String?
  contact  String[]
  email    String[]
  quote    String?

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @unique
}

model ServiceEn {
  id       String   @id @default(uuid())
  title    String?
  desc     String?
  location String?
  contact  String[]
  email    String[]
  quote    String?

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @unique
}

model CarGallery {
  id        String  @id @default(uuid())
  car_image String? // Global Image

  carGalleryId CarGalleryId?
  carGalleryEn CarGalleryEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CarGalleryId {
  id    String  @id @default(uuid())
  title String?
  desc  String?

  carGallery   CarGallery @relation(fields: [carGalleryId], references: [id], onDelete: Cascade)
  carGalleryId String     @unique
}

model CarGalleryEn {
  id    String  @id @default(uuid())
  title String?
  desc  String?

  carGallery   CarGallery @relation(fields: [carGalleryId], references: [id], onDelete: Cascade)
  carGalleryId String     @unique
}

model Partner {
  id         String  @id @default(uuid())
  name       String?
  logo       String?
  categoryId String?

  category ParnetCategory? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParnetCategory {
  id       String    @id @default(uuid())
  name     String?
  partners Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id          String        @id @default(uuid())
  title       String?
  description String?
  isPublished Boolean       @default(false)
  image       String?
  publishedAt DateTime      @default(now())
  author      String?
  categoryId  String?
  category    NewsCategory? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsCategory {
  id   String @id @default(uuid())
  name String @unique()
  news News[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
