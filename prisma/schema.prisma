generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  password      String
  name          String?
  role          Role    @default(SUPER_ADMIN)
  profile_image String  @default("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbm6QhXf5jqRZcX6R-lNF9sgaYnR0jtHKh0A&s")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  GUEST
}

model HomePage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  // hero section
  hero_bg String[]

  // about us section
  about_us_years_exp Int?
  about_us_products  Int?
  about_us_countries Int?
  about_us_brands    Int?

  // contact section
  contact_email    String[]
  contact_phone    String[]
  contact_link_map String?
  contact_address  String?

  // relations (1–1)
  homePageId HomePageId?
  homePageEn HomePageEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageId {
  id String @id @default(uuid())

  // hero section
  hero_title String?
  hero_desc  String?

  // about us section
  about_us_title String?
  about_us_desc  String?

  // services section
  services_title String?
  services_desc  String?

  // news section
  news_title String?
  news_desc  String?

  // partners section
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageEn {
  id String @id @default(uuid())

  // hero section
  hero_title String?
  hero_desc  String?

  // about us section
  about_us_title String?
  about_us_desc  String?

  // services section
  services_title String?
  services_desc  String?

  // news section
  news_title String?
  news_desc  String?

  // partners section
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUsPage {
  id                  String   @id @default(uuid())
  isActive            Boolean  @default(false)
  // hero section
  hero_title          String?
  hero_desc           String?
  hero_bg             String?
  // vision section
  vision_title        String?
  vision_desc         String?
  vision_image_parent String?
  vision_image_child  String?
  vision_list         String[]
  vision_quote        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  hero_bg String?

  newsPageEn NewsPageEn?
  newsPageId NewsPageId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageEn {
  id         String  @id @default(uuid())
  // hero section
  hero_title String?
  hero_desc  String?
  // news section
  news_title String?
  news_desc  String?
  // csr section
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageId {
  id         String  @id @default(uuid())
  // hero section
  hero_title String?
  hero_desc  String?
  // news section
  news_title String?
  news_desc  String?
  // csr section
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(uuid())
  title       String?
  description String?
  bg_image    String?
  car_image   String[] // for used car gallery
  order       Int?
  location    String?
  contact     String?
  email       String?
  quote       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partner {
  id         String  @id @default(uuid())
  name       String?
  logo       String?
  categoryId String?

  category ParnetCategory? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParnetCategory {
  id       String    @id @default(uuid())
  name     String?
  partners Partner[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id          String        @id @default(uuid())
  title       String?
  description String?
  isPublished Boolean       @default(false)
  image       String?
  publishedAt DateTime      @default(now())
  author      String?
  categoryId  String?
  category    NewsCategory? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsCategory {
  id   String @id @default(uuid())
  name String @unique()
  news News[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
