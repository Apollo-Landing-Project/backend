generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // directUrl = env("DIRECT_URL")
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  password      String
  name          String?
  role          Role    @default(SUPER_ADMIN)
  profile_image String  @default("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbm6QhXf5jqRZcX6R-lNF9sgaYnR0jtHKh0A&s")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  GUEST
}

model HomePage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  // hero section
  heroSlides HeroSlide[]

  // about us section
  about_us_years_exp Int?
  about_us_products  Int?
  about_us_countries Int?
  about_us_brands    Int?

  // contact section
  contact_email    String[]
  contact_phone    String[]
  contact_link_map String?
  contact_address  String?

  // relations (1–1)
  homePageId HomePageId?
  homePageEn HomePageEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageId {
  id String @id @default(uuid())

  // (hero title/desc moved to HeroSlide model)

  // about us section
  about_us_badge String?
  about_us_title String?
  about_us_desc  String?

  // services section
  services_badge String?
  services_title String?
  services_desc  String?

  // news section
  news_badge String?
  news_title String?
  news_desc  String?

  // partners section
  partners_badge String?
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomePageEn {
  id String @id @default(uuid())

  // (hero title/desc moved to HeroSlide model)

  // about us section
  about_us_badge String?
  about_us_title String?
  about_us_desc  String?

  // services section
  services_badge String?
  services_title String?
  services_desc  String?

  // news section
  news_badge String?
  news_title String?
  news_desc  String?

  // partners section
  partners_badge String?
  partners_title String?
  partners_desc  String?

  // contact section
  contact_title String?
  contact_desc  String?

  // 1–1 relation
  homePage   HomePage @relation(fields: [homePageId], references: [id])
  homePageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HeroSlide {
  id       String  @id @default(uuid())
  order    Int     @default(0)
  bg_image String?
  title_id String?
  desc_id  String?
  title_en String?
  desc_en  String?

  homePage   HomePage @relation(fields: [homePageId], references: [id], onDelete: Cascade)
  homePageId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUsPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  // Global Images (Shared)
  hero_bg              String?
  vision_image_parent  String?
  vision_image_child   String?
  mission_image_parent String?
  mission_image_child  String?
  history_image_parent String?
  history_image_child  String?

  // Relations
  aboutUsPageId AboutUsPageId?
  aboutUsPageEn AboutUsPageEn?

  governances       Governance[]
  companyStructures CompanyStructure[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model AboutUsPageId {
  id String @id @default(uuid())

  hero_badge String?
  hero_title String?
  hero_desc  String?

  vision_badge String?
  vision_title String?
  vision_desc  String?
  vision_quote String?
  vision_list  String[]

  mission_badge String?
  mission_title String?
  mission_desc  String?
  mission_quote String?
  mission_list  String[]

  history_badge String?
  history_title String?
  history_desc  String?

  company_structure_badge String?
  company_structure_title String?
  company_structure_desc  String?

  boc_badge String?
  boc_title String?
  boc_desc  String?

  bod_badge String?
  bod_title String?
  bod_desc  String?

  aboutUsPage   AboutUsPage @relation(fields: [aboutUsPageId], references: [id], onDelete: Cascade)
  aboutUsPageId String      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUsPageEn {
  id String @id @default(uuid())

  hero_badge String?
  hero_title String?
  hero_desc  String?

  vision_badge String?
  vision_title String?
  vision_desc  String?
  vision_quote String?
  vision_list  String[]

  mission_badge String?
  mission_title String?
  mission_desc  String?
  mission_quote String?
  mission_list  String[]

  history_badge String?
  history_title String?
  history_desc  String?

  company_structure_badge String?
  company_structure_title String?
  company_structure_desc  String?

  boc_badge String?
  boc_title String?
  boc_desc  String?

  bod_badge String?
  bod_title String?
  bod_desc  String?

  aboutUsPage   AboutUsPage @relation(fields: [aboutUsPageId], references: [id], onDelete: Cascade)
  aboutUsPageId String      @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Position {
  BOD
  BOC
}

model Governance {
  id            String   @id @default(uuid())
  name          String
  position      Position
  position_desc String
  photo_image   String? // URL

  aboutUsPage   AboutUsPage? @relation(fields: [aboutUsPageId], references: [id])
  aboutUsPageId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyStructure {
  id         String  @id @default(uuid())
  name       String
  icon_image String? // URL

  aboutUsPage   AboutUsPage? @relation(fields: [aboutUsPageId], references: [id])
  aboutUsPageId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)

  hero_bg String?

  newsPageEn NewsPageEn?
  newsPageId NewsPageId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageEn {
  id         String  @id @default(uuid())
  // hero section
  hero_badge String?
  hero_title String?
  hero_desc  String?
  // news section
  news_badge String?
  news_title String?
  news_desc  String?
  // csr section
  csr_badge  String?
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsPageId {
  id         String  @id @default(uuid())
  // hero section
  hero_badge String?
  hero_title String?
  hero_desc  String?
  // news section
  news_badge String?
  news_title String?
  news_desc  String?
  // csr section
  csr_badge  String?
  csr_title  String?
  csr_desc   String?

  newsPage   NewsPage @relation(fields: [newsPageId], references: [id])
  newsPageId String   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServicePage {
  id       String  @id @default(uuid())
  hero_bg  String?
  isActive Boolean @default(false)

  servicePageEn ServicePageEn?
  servicePageId ServicePageId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServicePageId {
  id String @id @default(uuid())

  // Hero Section
  hero_badge String?
  hero_title String?
  hero_desc  String?

  // Titles for Sections
  used_car_gallery_badge String?
  used_car_gallery_title String?
  used_car_gallery_desc  String?

  servicePage   ServicePage @relation(fields: [servicePageId], references: [id], onDelete: Cascade)
  servicePageId String      @unique
}

model ServicePageEn {
  id String @id @default(uuid())

  // Hero Section
  hero_badge String?
  hero_title String?
  hero_desc  String?

  // Titles for Sections
  used_car_gallery_badge String?
  used_car_gallery_title String?
  used_car_gallery_desc  String?

  servicePage   ServicePage @relation(fields: [servicePageId], references: [id], onDelete: Cascade)
  servicePageId String      @unique
}

model Service {
  id       String  @id @default(uuid())
  bg_image String? // Global Image

  isActive Boolean @default(true)
  order    Int     @default(0)

  // Relations (One to One)
  serviceEn ServiceEn?
  serviceId ServiceId?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServiceId {
  id        String   @id @default(uuid())
  badge     String?
  title     String?
  desc      String?
  desc_sort String?
  location  String?
  contact   String[]
  email     String[]
  quote     String?

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @unique
}

model ServiceEn {
  id        String   @id @default(uuid())
  badge     String?
  title     String?
  desc      String?
  desc_sort String?
  location  String?
  contact   String[]
  email     String[]
  quote     String?

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @unique
}

model CarGallery {
  id        String  @id @default(uuid())
  car_image String? // Global Image

  carGalleryId CarGalleryId?
  carGalleryEn CarGalleryEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CarGalleryId {
  id    String  @id @default(uuid())
  title String?
  desc  String?

  carGallery   CarGallery @relation(fields: [carGalleryId], references: [id], onDelete: Cascade)
  carGalleryId String     @unique
}

model CarGalleryEn {
  id    String  @id @default(uuid())
  title String?
  desc  String?

  carGallery   CarGallery @relation(fields: [carGalleryId], references: [id], onDelete: Cascade)
  carGalleryId String     @unique
}

enum PartnerCategory {
  INSURANCE
  FUNDING
}

model Partner {
  id         String          @id @default(uuid())
  name       String?
  logo_image String?
  category   PartnerCategory @default(INSURANCE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsNews {
  id           String   @id @default(uuid())
  isPublished  Boolean  @default(false)
  image        String?
  author       String?
  author_image String?
  publishedAt  DateTime @default(now())

  newsNewsId NewsNewsId?
  newsNewsEn NewsNewsEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsNewsId {
  id          String  @id @default(uuid())
  title       String?
  description String?
  content     String?

  newsNews   NewsNews @relation(fields: [newsNewsId], references: [id], onDelete: Cascade)
  newsNewsId String   @unique
}

model NewsNewsEn {
  id          String  @id @default(uuid())
  title       String?
  description String?
  content     String?

  newsNews   NewsNews @relation(fields: [newsNewsId], references: [id], onDelete: Cascade)
  newsNewsId String   @unique
}

model NewsCSR {
  id          String  @id @default(uuid())
  isPublished Boolean @default(false)

  author       String?
  author_image String?
  publishedAt  DateTime @default(now())

  newsCSRId    NewsCSRId?
  newsCSREn    NewsCSREn?
  newsCSRImage NewsCSRImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsCSRImage {
  id             String  @id @default(uuid())
  image          String
  description_en String?
  description_id String?
  newsCSRId      String

  newsCSR NewsCSR @relation(fields: [newsCSRId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsCSRId {
  id          String  @id @default(uuid())
  title       String?
  description String?
  content     String?

  newsCSR   NewsCSR @relation(fields: [newsCSRId], references: [id], onDelete: Cascade)
  newsCSRId String  @unique
}

model NewsCSREn {
  id          String  @id @default(uuid())
  title       String?
  description String?
  content     String?

  newsCSR   NewsCSR @relation(fields: [newsCSRId], references: [id], onDelete: Cascade)
  newsCSRId String  @unique
}

model InvestorPage {
  id       String  @id @default(uuid())
  isActive Boolean @default(false)
  hero_bg  String?

  inverstorPageId InvestorPageId?
  inverstorPageEn InvestorPageEn?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InvestorPageId {
  id String @id @default(uuid())

  hero_badge         String?
  hero_title         String?
  hero_desc          String
  stakeholders_badge String?
  stakeholders_title String?
  stakeholders_desc  String?
  report_badge       String?
  report_title       String?
  report_desc        String?

  investorPage   InvestorPage @relation(fields: [investorPageId], references: [id], onDelete: Cascade)
  investorPageId String       @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InvestorPageEn {
  id String @id @default(uuid())

  hero_badge         String?
  hero_title         String?
  hero_desc          String
  stakeholders_badge String?
  stakeholders_title String?
  stakeholders_desc  String?
  report_badge       String?
  report_title       String?
  report_desc        String?

  investorPage   InvestorPage @relation(fields: [investorPageId], references: [id], onDelete: Cascade)
  investorPageId String       @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
